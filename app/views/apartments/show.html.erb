<% content_for(:title_tag) do %>
<%= @apartment.name %>
<% end %>



<p>apartment name : <%= @apartment.name %></p>
<% if current_user.id == @apartment.user.id %>
<%= link_to "update apartment information", edit_apartment_path(@apartment) %>
<br>
<% end %>
<br>
<h2>description:</h2>
<p><%= @apartment.description %></p>
<h2>owner:</h2>
<p><%= @apartment.user.profile.first_name %></p>
<%= link_to "back to list", apartments_path %>

<% @amenities.each  do |category| %>
  <div class="room">
    <h3><%= category.first %></h3>
    <ul>
      <% category.last.each do |amenity| %>
        <li><%= amenity.name %></li>
      <%end %>
    </ul>
  </div>
<% end %>




