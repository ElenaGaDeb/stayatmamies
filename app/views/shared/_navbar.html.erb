<header class="header fixed fixed-desktop clearfix transparent-header-on">
  <div class="container">
    <div class="row">
      <div class="col-md-auto hidden-md-down pl-3">
        <!-- header-first start -->
        <!-- ================ -->
        <div class="header-first clearfix">

          <!-- logo -->
          <div id="logo" class="logo">
            <!--  -->
            <%= link_to root_path do %>
            <% image_tag "logo.png", id: "logo-lg" %>
            <% end %>
          </div>
        </div>
        <!-- header-first end -->



      </div>
      <div class="col-lg-8 ml-lg-auto">

        <!-- header-second start -->
        <!-- ================ -->
        <div class="header-second clearfix">

          <!-- main-navigation start -->
          <!-- classes: -->
          <!-- "onclick": Makes the dropdowns open on click, this the default bootstrap behavior e.g. class="main-navigation onclick" -->
          <!-- "animated": Enables animations on dropdowns opening e.g. class="main-navigation animated" -->
          <!-- ================ -->
          <div class="main-navigation main-navigation--mega-menu  animated">
            <nav class="navbar navbar-expand-lg navbar-light p-0">
              <!-- main-menu -->
              <div class="navbar-brand clearfix hidden-lg-up">

                <!-- logo -->
                <div id="logo-mobile" class="logo">
                  <%= link_to root_path do %>
                  <% image_tag "logo.png", :width => 150, :height => 150 %>
                  <% end %>
                </div>
              </div>

              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-collapse-1" aria-controls="navbar-collapse-1" aria-expanded="true" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>


              <div class="navbar-collapse collapse show" id="navbar-collapse-1" style>

                <ul class="navbar-nav ml-xl-auto">


                  <!-- mega-menu start -->
                  <li class="nav-item mega-menu mega-menu--wide">
                    <%= link_to "Home", root_path, class: "nav-link" %>
                  </li>

                  <% if user_signed_in? %>
                  <li class="nav-item mega-menu mega-menu--wide">
                    <%= link_to "Messages", "#", class: "nav-link" %>
                  </li>

                  <li class="nav-item mega-menu mega-menu--wide">
                    <div class="dropdown">
                    <% if current_user.profile.photo? != nil %>
                      <%= cl_image_tag current_user.profile.photo.path, class: "avatar dropdown-toggle", "data-toggle" => "dropdown" %>
                    <% else %>
                      <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
                      <%= image_tag avatar_url, class: "avatar dropdown-toggle", "data-toggle" => "dropdown" %>
                    <% end %>
                      <ul class="dropdown-menu dropdown-menu-right">
                        <% if current_user.profile %>
                        <li>
                          <%= link_to profile_path(current_user.profile) do %>
                          <i class="fa fa-user"></i> <%= t("profile", default: "Profile") %>
                          <% end %>
                          </li>
                          <% else %>
                          <li>
                          <%= link_to new_profile_path do %>
                          <i class="fa fa-user"></i> <%= t("profile", default: "Create Profile") %>
                          <% end %>
                        </li>
                        <% end %>
                        <li>
                          <%= link_to destroy_user_session_path, method: :delete do %>
                          <i class="fa fa-sign-out"></i>  <%= t("sign_out", default: "Log out") %>
                          <% end %>
                        </li>
                      </ul>
                    </div>
                  </li>
                  <% else %>

                  <!-- Login link (when logged out) -->
                  <li class="nav-item mega-menu mega-menu--wide">
                    <%= link_to "I want to become a host", new_user_registration_path, class: "nav-link" %>
                  </li>
                  <li class="nav-item mega-menu mega-menu--wide">
                    <%= link_to t("sign_in", default: "Login"), new_user_session_path, class: "nav-link" %>
                  </li>
                  <% end %>

                </ul>
              </div>
            </nav>
          </div>

        </header>

